{
  "manifest_version": 3,
  "name": "TubeTutor",
  "version": "1.0",
  "description": "A Chrome Extension to support learning with video suggestions.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "icons": {"32": "images/logo.jpeg"},
  "web_accessible_resources": [
    {
      "resources": ["listeningScript.js"],
      "matches": ["<all_urls>"]
    }
  ]
}